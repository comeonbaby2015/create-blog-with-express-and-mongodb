<%- include header %>
<form method="post">
    标题: <br>
    <input type="text" name="title" value="<%= post.title %>" disabled="disabled"> <br>
    正文: <br>
    <textarea name="post" cols="100" rows="20"><%= post.post %></textarea> <br>
    标签: <br>
    <input type="text" name="tag1" value="<%=post.tags[0]%>" readonly>
    <input type="text" name="tag2" value="<%=post.tags[1]%>" readonly>
    <input type="text" name="tag3" value="<%=post.tags[2]%>" readonly> <br>
    <input type="submit" value="保存修改">
</form>
<%- include footer %>